{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "vendor/example-block",
    "version": "0.1.0",
    "title": "Example Block",
    "category": "layout",
    "icon": "columns",
    "description": "A two-column layout block with card-style content areas.",
    "example": {},
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "anchor": true,
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": true
        },
        "color": {
            "background": true,
            "text": true
        }
    },
    "textdomain": "vendor",
    "style": "file:./style.css",
    "editorStyle": "file:./editor.css",
    "viewScript": "file:./view.js",
    "attributes": {
        "className": {
            "type": "string",
            "default": "wp-block-vendor-example-block"
        }
    }
}
